    "@nestjs/mapped-types": "*",
    "@nestjs/mongoose": "^10.0.6",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.8",
    "@nestjs/platform-socket.io": "^10.3.8",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/websockets": "^10.3.8",
    "bcrypt": "^5.1.1",
    "class-validator": "^0.14.1",
    "cloudinary": "^2.5.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
